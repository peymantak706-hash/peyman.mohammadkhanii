    <script>
        // بارش کد
        const codeRain = document.getElementById('codeRain');
        for (let i = 0; i < 40; i++) {
            const col = document.createElement('div');
            col.className = 'column';
            col.style.left = (i * 2.5) + '%';
            col.style.animationDuration = Math.random() * 30 + 20 + 's';
            col.innerText = generateRandomCode();
            codeRain.appendChild(col);
        }
        function generateRandomCode() {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789{}[]()=+-_<>?/';
            return Array(50).fill().map(() => chars[Math.floor(Math.random() * chars.length)]).join('');
        }

        // نگین طلایی
        const goldDrops = document.getElementById('goldDrops');
        setInterval(() => {
            const drop = document.createElement('div');
            drop.className = 'drop';
            drop.style.left = Math.random() * 100 + '%';
            drop.style.animationDuration = Math.random() * 5 + 3 + 's';
            goldDrops.appendChild(drop);
            setTimeout(() => drop.remove(), 5000);
        }, 700);

        // صداها
        const bgMusic = document.getElementById('bgMusic');
        const clickSound = document.getElementById('clickSound');
        let musicPlaying = false;

        // پخش موزیک بعد از اولین کلیک
        document.body.addEventListener('click', () => {
            if (!musicPlaying) {
                bgMusic.play().catch(e => console.log("موزیک نمی‌تواند پخش شود."));
                musicPlaying = true;
            }
        }, { once: true });

        // صدای کلیک
        document.querySelectorAll('.btn, .theme-toggle, .music-toggle').forEach(btn => {
            btn.addEventListener('click', () => {
                clickSound.currentTime = 0;
                clickSound.play().catch(() => {});
            });
        });

        // تغییر تم
        function toggleTheme() {
            document.body.classList.toggle('light');
        }

        // تغییر موزیک
        function toggleMusic() {
            if (bgMusic.paused) {
                bgMusic.play();
                document.querySelector('.music-toggle').innerText = 'موزیک: خاموش';
            } else {
                bgMusic.pause();
                document.querySelector('.music-toggle').innerText = 'موزیک: روشن';
            }
        }
    </script>
